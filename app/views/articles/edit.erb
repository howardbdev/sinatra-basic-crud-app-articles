<h3>Edit article</h3>
<form action="/articles/<%= @article.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="article[title]" value="<%= @article.title %>">
  <input type="text" name="article[author]" value="<%= @article.author %>">
  <input type="text" name="article[content]" value="<%= @article.content %>">
  <input type="text" name="article[topic]" value="<%= @article.topic %>">
  <input type="submit" name="" value="Update Article">
</form>
